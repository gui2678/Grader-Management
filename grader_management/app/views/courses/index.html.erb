<% content_for :title, 'Listing courses' %>
<div class="admin-content">
  <h1>Listing courses</h1>
  <div class="header">
    <div></div>
    <% if user_signed_in? && current_user.admin? %>
      <%= link_to 'New Course', new_course_path, class: 'btn btn-primary' %>
      <%= link_to 'Reload Courses', reload_courses_courses_path, class: 'btn btn-warning' %>
    <% end %>
  </div>
  
  <div class="table-responsive">
    <table class="table" style="color: white;">
      <thead>
        <tr>
          <th>Name</th>
          <th>Comment</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= link_to course.course_name, course_path(course) %></td>
            <td><%= course.course_description %></td>
            <td><%= link_to 'Show', course_path(course), class: 'btn btn-info btn-sm' %></td>
            <% if user_signed_in? && current_user.admin? %>
              <td><%= link_to 'Edit', edit_course_path(course), class: 'btn btn-primary btn-sm' %></td>
              <td>
              <%= link_to 'Destroy', course_path(course),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this course?' },
              class: 'btn btn-danger btn-sm' %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="pagination">
  <%= raw pagy_nav(@pagy) %>
</div>