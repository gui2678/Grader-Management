<div style="background-color: #f9f9f9; padding: 20px; border-radius: 8px;">
  <h1 style="font-size: 2em; color: #333; margin-bottom: 20px;">Recommendations</h1>

  <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
    <thead>
      <tr>
        <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2;">Recommender</th>
        <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2;">Recommended</th>
        <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2;">Course</th>
        <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2;">Message</th>
      </tr>
    </thead>

    <tbody>
      <% @recommendations.each do |recommendation| %>
        <tr>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= recommendation.recommender.first_name %> <%= recommendation.recommender.last_name %></td>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= recommendation.recommended.first_name %> <%= recommendation.recommended.last_name %></td>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= recommendation.course.course_name %></td>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= recommendation.message %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Recommendation', new_recommendation_path, style: 'display: inline-block; padding: 10px 20px; background-color: #007BFF; color: white; text-align: center; text-decoration: none; border-radius: 4px;' %>
</div>
