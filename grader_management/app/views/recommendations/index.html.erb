<table>
  <thead>
    <tr>
      <th>Recommender</th>
      <th>Recommended</th>
      <th>Course</th>
      <th>Message</th>
    </tr>
  </thead>
  <tbody>
    <% if @recommendations.present? %>
      <% @recommendations.each do |recommendation| %>
        <tr>
          <td style="border: 1px solid #ddd; padding: 8px;">
            <%= recommendation.recommender ? "#{recommendation.recommender.first_name} #{recommendation.recommender.last_name}" : 'N/A' %>
          </td>
          <td style="border: 1px solid #ddd; padding: 8px;">
            <% if recommendation.recommended %>
              <%= "#{recommendation.recommended.first_name} #{recommendation.recommended.last_name}" %>
            <% else %>
              <%= "#{recommendation.first_name} #{recommendation.last_name}" %>
            <% end %>
          </td>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= recommendation.course.course_name %></td>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= recommendation.message %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4" style="border: 1px solid #ddd; padding: 8px; text-align: center;">No recommendations available</td>
      </tr>
    <% end %>
  </tbody>
</table>
